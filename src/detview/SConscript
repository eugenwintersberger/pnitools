Import("gui_env")

gui_env.Append(CPPPATH=["/usr/include/vtk-5.8"])
gui_env.Append(LIBS=["QtCore","QtGui"])
gui_env.Append(LIBS=["vtkWidgets","vtkVolumeRendering","vtkViews","vtksys","vtkRendering"])
gui_env.Append(LIBS=["vtkQtChart","vtkproj4","vtkImaging","vtkGraphics","vtkalglib"])
gui_env.Append(LIBS=["vtkCommon","vtkIO","vtkHybrid","vtkFiltering"])
gui_env.Append(LIBS=["QVTK"])
gui_env.AppendUnique(LIBS=[""])
sources = ["main.cpp","MainWidget.cpp","RenderingPipeline.cpp"]
#sources.extend(["IntensityRangeWidget.cpp"])
objects = gui_env.Object(sources)
detview = gui_env.Program("detview",objects)

gui_env.Alias("all",[detview])
