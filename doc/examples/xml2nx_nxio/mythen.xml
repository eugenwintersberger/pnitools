<!--- XML configuration of the mythen detector -->
<group name ="detector" type="NXdetector">
    <field name="data" type="uint32" units="cps" 
        long_name = "detector raw data">

        <dimensions rank="2">
            <dim index="1" value="0"/>
            <dim index="2" value="2048"/>
        </dimensions>

    </field>
    
    <field name="matrix" unit="" type="float32">
        <dimensions rank="2">
            <dim index="1" value="3"/>
            <dim index="2" value="3"/>
        </dimensions>



    </field>

    <field name="x_pixel_size" unit="um" type="float32">
        12.45
    </field>
    <field name="y_pixel_size" unit="um" type="float32">
        12.45
    </field>
    <field name="layout" type="string" unit="">
        linear
    </field>
</group>
